{% extends 'admin/base.html.twig' %}

{% block title %}Kapcsolatfelvétel{% endblock %}

{% block body %}
    <h1 class="h1 mt-3 mb-4">Üzenet: #{{ contact_message.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ contact_message.id }}</td>
            </tr>
            <tr>
                <th>Teljes név</th>
                <td>{{ contact_message.name }}</td>
            </tr>
            <tr>
                <th>E-mail cím</th>
                <td>{{ contact_message.email }}</td>
            </tr>
            <tr>
                <th>Üzenet</th>
                <td>{{ contact_message.message }}</td>
            </tr>
            <tr>
                <th>Létrehozva</th>
                <td>{{ contact_message.createdAt ? contact_message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center pt-3">
        <a href="{{ path('admin_contact_message_index') }}" class="btn btn-outline-secondary btn-sm me-3">
            <i class="fas fa-angle-left"></i> Vissza a listához
        </a>

        {{ include('admin/contact_message/_delete_form.html.twig') }}
    </div>
{% endblock %}
