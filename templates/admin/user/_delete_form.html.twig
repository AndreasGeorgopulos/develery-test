<form method="post" class="d-inline" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Biztos, hogy törölni akarod ezt a felhasználót?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash"></i> Törlés
    </button>
</form>
