{% extends 'admin/base.html.twig' %}

{% block title %}Felhasználók{% endblock %}

{% block body %}
    <h1 class="h1 mt-3 mb-4">Felhasználók</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Keresztnév</th>
                <th>Vezetéknév</th>
                <th>E-mail cím</th>
                <th>Létrehozva</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y.m.d. H:i') : '' }}</td>
                <td class="text-end">
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center">Nincs megjeleníthető elem</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}" class="btn btn-outline-success btn-sm">
        <i class="fas fa-plus"></i> új felhasználó
    </a>
{% endblock %}
