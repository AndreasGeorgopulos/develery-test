{% extends 'admin/base.html.twig' %}

{% block title %}Felhasználó{% endblock %}

{% block body %}
    <h1 class="h1 mt-3 mb-4">Felhasználó: #{{ user.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Keresztnév</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Vezetéknév</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>E-mail cím</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Szabályok</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Létrehozva</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y.m.d. H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Utolsó módosítás</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y.m.d. H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center pt-3">
        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary btn-sm me-3">
            <i class="fas fa-angle-left"></i> Vissza a listához
        </a>

        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm me-3">
            <i class="fas fa-edit"></i> Szerkesztés
        </a>

        {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
